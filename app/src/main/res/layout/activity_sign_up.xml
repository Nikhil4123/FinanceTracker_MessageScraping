<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    tools:context=".Sign_UP">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_15mdp"
        android:paddingTop="@dimen/_5mdp"
        >

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25mdp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="@dimen/_25mdp"
            android:background="@drawable/whiteshade2"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.968"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_60mdp"
                android:layout_height="@dimen/_60mdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20mdp"
                android:elevation="@dimen/_20mdp"

                android:src="@drawable/fp4" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5mdp"
                android:gravity="center"
                android:text="Create account"
                android:textColor="#454242"
                android:textSize="@dimen/_20font_mdp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_15mdp"
                android:layout_marginRight="@dimen/_15mdp"
                android:background="@drawable/whiteshade3"
                android:paddingStart="@dimen/_1mdp"
                android:paddingEnd="@dimen/_1mdp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nameET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Name"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="15"
                    android:textColorHint="@color/black"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_7mdp"
                android:layout_marginRight="@dimen/_15mdp"
                android:background="@drawable/whiteshade3"


                android:paddingStart="@dimen/_1mdp"
                android:paddingEnd="@dimen/_1mdp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/professionET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Profession"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:maxLength="17"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_7mdp"
                android:layout_marginRight="@dimen/_15mdp"
                android:background="@drawable/whiteshade3"


                android:paddingStart="@dimen/_1mdp"
                android:paddingEnd="@dimen/_1mdp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_7mdp"
                android:layout_marginRight="@dimen/_15mdp"
                android:background="@drawable/whiteshade3"


                android:paddingStart="@dimen/_1mdp"
                android:paddingEnd="@dimen/_1mdp"
                app:boxBackgroundMode="outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passwordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- activity_sign_up.xml -->
            <com.google.android.gms.common.SignInButton
                android:id="@+id/googleSignInBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/signupbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15mdp"
                android:layout_marginTop="@dimen/_15mdp"
                android:layout_marginRight="@dimen/_15mdp"
                android:layout_marginBottom="@dimen/_20mdp"
                android:backgroundTint="#E46CA4D5"
                android:elevation="@dimen/_15mdp"
                android:text="Sign Up"

                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="171dp"
            android:layout_height="23dp"


            android:layout_marginBottom="40dp"
            android:layout_weight="1"

            android:text="Already have an acoount ?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/gotologin"
            app:layout_constraintHorizontal_bias="0.82"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/gotologin"
            android:layout_width="79dp"
            android:layout_height="22dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="40dp"
            android:layout_weight="1"
            android:text="LOG IN "
            android:textColor="#833C3C"
            android:textSize="@dimen/_13font_mdp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>